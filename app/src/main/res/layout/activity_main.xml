<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Zone pour afficher les aliens -->
    <com.example.myapplication.AlienView
        android:id="@+id/alien_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/direction_buttons_group"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Groupe des boutons directionnels -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/direction_buttons_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp">

        <!-- Bouton haut -->
        <Button
            android:id="@+id/button_up"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="↑"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Bouton gauche -->
        <Button
            android:id="@+id/button_left"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="←"
            app:layout_constraintTop_toBottomOf="@id/button_up"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Bouton droite -->
        <Button
            android:id="@+id/button_right"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="→"
            app:layout_constraintTop_toBottomOf="@id/button_up"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Bouton bas -->
        <Button
            android:id="@+id/button_down"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="↓"
            app:layout_constraintTop_toBottomOf="@id/button_left"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Bouton pour tirer -->
    <Button
        android:id="@+id/button_fire"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Tirer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
